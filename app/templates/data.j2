{% extends "inc/base.j2" %}
{% block content %}

  <div class="menu">
    <h3>data</h3>
    {{ inline_form(form, submit="filter") }}
    <a href="/api-post/data/generate">generate</a>
  </div>

  <table class="table table-sm sortable">
    <thead>
    <tr>
      <th data-sort-method="date">created_at</th>
      <th>status</th>
      <th>value</th>
      <th>inc</th>
      <th>delete</th>
      <th>view</th>
    </tr>
    </thead>
    <tbody>
    {% for d in data %}
      <tr>
        <td>{{ d.created_at | dt }}</td>
        <td>{{ d.status | data_status }}</td>
        <td>{{ d.value | n }}</td>
        <td><a href="/api-post/data/{{ d.id }}/inc?value=2">inc</a></td>
        <td><a href="/api-delete/data/{{ d.id }}" onclick="return confirm('sure?')">delete</a></td>
        <td><a href="/api/data/{{ d.id }}">view</a></td>
      </tr>
    {% endfor %}
    </tbody>
  </table>

{% endblock %}
